{
	"format_version": "1.18.3",
	"minecraft:client_entity": {
		"description": {
			"identifier": "pokemon:cubone",
			"materials": {
				"default": "entity_emissive_alpha",
				"aura": "charged_creeper"
			},
			"textures": {
				"evo_aura": "textures/entity/evolving",
				"default": "textures/entity/pokemon/cubone/cubone.png",
				"shiny_default": "textures/entity/pokemon/cubone/shiny_cubone.png",
				"independence": "textures/entity/pokemon/cubone/cubone_independence.png",
				"shiny_independence": "textures/entity/pokemon/cubone/shiny_cubone_independence.png"
			},
			"scripts": {
				"scale": "q.property('pokeb:scale')",
				"initialize": [
					"v.blink_chance = 0.01;",
					"v.move_threshold = 0.01;"
				],
				"pre_animation": [
					"v.skin_index = query.property('pokeb:skin_index');",
					"v.is_ground_idling = query.is_on_ground && query.modified_move_speed < v.move_threshold;",
					"v.is_air_idling = !query.is_on_ground && !query.is_in_water && !query.is_jumping && query.modified_move_speed < v.move_threshold;",
					"v.is_water_idling = query.is_in_water && query.modified_move_speed < v.move_threshold;",
					"v.is_walking = query.modified_move_speed >= v.move_threshold && query.is_on_ground && !query.is_in_water;",
					"v.is_swimming = query.is_swimming;",
					"v.is_flying = query.modified_move_speed >= v.move_threshold && q.can_fly && !query.is_on_ground && !query.is_in_water && !query.is_jumping;",
					"v.is_sleeping = q.is_sleeping;",
					"v.should_blink = math.random(0.0, 1.0) <= v.blink_chance;"
				],
				"animate": [
					"controller",
					{
						"blink": "v.should_blink"
					}
				]
			},
			"animations": {
				"default_blink": "animation.cubone.blink",
				"default_ground_idle": "animation.cubone.ground_idle",
				"default_air_idle": "animation.cubone.ground_idle",
				"default_water_idle": "animation.cubone.water_idle",
				"default_walking": "animation.cubone.walking",
				"default_flying": "animation.cubone.ground_idle",
				"default_swimming": "animation.cubone.swimming",
				"default_sleeping": "animation.cubone.ground_idle",
				"default_attack": "animation.cubone.attack",
				"independence_ground_idle": "animation.cubone_independence.ground_idle",
				"independence_water_idle": "animation.cubone_independence.water_idle",
				"independence_sleeping": "animation.cubone_independence.sleeping",
				"independence_walking": "animation.cubone_independence.walking",
				"independence_swimming": "animation.cubone_independence.swimming",
				"independence_attack": "animation.cubone_independence.attack",
				"independence_faint": "animation.cubone_independence.faint",
				"look_at_target": "animation.pokemon.look_at_target",
				"attack": "controller.animation.pokemon.cubone_attack",
				"blink": "controller.animation.pokemon.cubone_blink",
				"controller": "controller.animation.pokemon.cubone"
			},
			"render_controllers": [
				{
					"controller.render.pokemon:cubone": "query.variant==0"
				},
				{
					"controller.render.pokemon:cubone.evolve": "query.variant==1"
				}
			],
			"spawn_egg": {
				"texture": "cubone",
				"texture_index": 0
			},
			"geometry": {
				"default": "geometry.cubone",
				"independence": "geometry.cubone_independence"
			}
		}
	}
}
