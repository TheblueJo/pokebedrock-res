{
	"format_version": "1.18.3",
	"minecraft:client_entity": {
		"description": {
			"identifier": "pokemon:vivillon",
			"materials": {
				"default": "entity_emissive_alpha",
				"aura": "charged_creeper"
			},
			"textures": {
				"evo_aura": "textures/entity/evolving",
				"default": "textures/entity/pokemon/vivillon/vivillon.png",
				"shiny_default": "textures/entity/pokemon/vivillon/shiny_vivillon.png",
				"archipelago": "textures/entity/pokemon/vivillon/vivillon_archipelago.png",
				"continental": "textures/entity/pokemon/vivillon/vivillon_continental.png",
				"elegant": "textures/entity/pokemon/vivillon/vivillon_elegant.png",
				"garden": "textures/entity/pokemon/vivillon/vivillon_garden.png",
				"high_plains": "textures/entity/pokemon/vivillon/vivillon_high_plains.png",
				"icy_snow": "textures/entity/pokemon/vivillon/vivillon_icy_snow.png",
				"jungle": "textures/entity/pokemon/vivillon/vivillon_jungle.png",
				"marine": "textures/entity/pokemon/vivillon/vivillon_marine.png",
				"modern": "textures/entity/pokemon/vivillon/vivillon_modern.png",
				"monsoon": "textures/entity/pokemon/vivillon/vivillon_monsoon.png",
				"ocean": "textures/entity/pokemon/vivillon/vivillon_ocean.png",
				"polar": "textures/entity/pokemon/vivillon/vivillon_polar.png",
				"river": "textures/entity/pokemon/vivillon/vivillon_river.png",
				"sandstorm": "textures/entity/pokemon/vivillon/vivillon_sandstorm.png",
				"savanna": "textures/entity/pokemon/vivillon/vivillon_savanna.png",
				"sun": "textures/entity/pokemon/vivillon/vivillon_sun.png",
				"tundra": "textures/entity/pokemon/vivillon/vivillon_tundra.png",
				"valentine": "textures/entity/pokemon/vivillon/vivillon_valentine.png"
			},
			"scripts": {
				"scale": "q.property('pokeb:scale')",
				"initialize": [
					"v.blink_chance = 0.01;",
					"v.move_threshold = 0.01;"
				],
				"pre_animation": [
					"v.skin_index = query.property('pokeb:skin_index');",
					"v.is_ground_idling = query.is_on_ground && query.modified_move_speed < v.move_threshold;",
					"v.is_air_idling = !query.is_on_ground && !query.is_in_water && !query.is_jumping && query.modified_move_speed < v.move_threshold;",
					"v.is_water_idling = query.is_in_water && query.modified_move_speed < v.move_threshold;",
					"v.is_walking = query.modified_move_speed >= v.move_threshold && query.is_on_ground && !query.is_in_water;",
					"v.is_swimming = query.is_swimming;",
					"v.is_flying = query.modified_move_speed >= v.move_threshold && q.can_fly && !query.is_on_ground && !query.is_in_water && !query.is_jumping;",
					"v.is_sleeping = q.is_sleeping;",
					"v.should_blink = math.random(0.0, 1.0) <= v.blink_chance;"
				],
				"animate": [
					"controller",
					{
						"blink": "v.should_blink"
					}
				]
			},
			"animations": {
				"default_ground_idle": "animation.vivillon.ground_idle",
				"default_air_idle": "animation.vivillon.ground_idle",
				"default_water_idle": "animation.vivillon.ground_idle",
				"default_walking": "animation.vivillon.ground_idle",
				"default_flying": "animation.vivillon.flying",
				"default_swimming": "animation.vivillon.ground_idle",
				"default_sleeping": "animation.vivillon.sleeping",
				"look_at_target": "animation.pokemon.look_at_target",
				"attack": "animation.vivillon.attack",
				"blink": "animation.vivillon.blink",
				"controller": "controller.animation.pokemon"
			},
			"render_controllers": [
				{
					"controller.render.pokemon:vivillon": "query.variant==0"
				},
				{
					"controller.render.evolve": "query.variant==1"
				}
			],
			"spawn_egg": {
				"texture": "vivillon",
				"texture_index": 0
			},
			"geometry": {
				"default": "geometry.vivillon"
			}
		}
	}
}
