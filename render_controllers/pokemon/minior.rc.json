{
	"format_version": "1.8.0",
	"render_controllers": {
		"controller.render.pokemon:minior": {
			"arrays": {
				"materials": {
					"Array.materialVariants": [
						"Material.default"
					]
				},
				"geometries": {
					"Array.geometryVariants": [
						"Geometry.default",
						"Geometry.orange",
						"Geometry.yellow",
						"Geometry.green",
						"Geometry.blue",
						"Geometry.indigo",
						"Geometry.violet"
					]
				},
				"textures": {
					"Array.textureVariants": [
						"Texture.default",
						"Texture.shiny_default",
						"Texture.orange",
						"Texture.yellow",
						"Texture.green",
						"Texture.blue",
						"Texture.indigo",
						"Texture.violet"
					]
				}
			},
			"materials": [
				{
					"*": "Material.default"
				}
			],
			"geometry": "Array.geometryVariants[v.skin_index]",
			"textures": [
				"Array.textureVariants[(v.skin_index==0 && query.property('pokeb:shiny') == false) ? 0:(v.skin_index==0 && query.property('pokeb:shiny') == true) ? 1:(v.skin_index==1) ? 2:(v.skin_index==2) ? 3:(v.skin_index==3) ? 4:(v.skin_index==4) ? 5:(v.skin_index==5) ? 6:(v.skin_index==6) ? 7:0]"
			]
		},
		"controller.render.pokemon:minior.evolve": {
			"arrays": {
				"geometries": {
					"Array.geometryVariants": [
						"Geometry.default",
						"Geometry.orange",
						"Geometry.yellow",
						"Geometry.green",
						"Geometry.blue",
						"Geometry.indigo",
						"Geometry.violet"
					]
				}
			},
			"geometry": "Array.geometryVariants[v.skin_index]",
			"materials": [
				{
					"*": "Material.aura"
				}
			],
			"textures": [
				"Texture.evo_aura"
			],
			"uv_anim": {
				"offset": [
					"(query.variant == 1)?(Math.floor(query.life_time*20.0)+query.frame_alpha)*0.01:0.0",
					"(query.variant == 1)?(Math.floor(query.life_time*20.0)+query.frame_alpha)*0.01:0.0"
				],
				"scale": [
					1,
					1
				]
			},
			"light_color_multiplier": 1,
			"ignore_lighting": true
		}
	}
}
