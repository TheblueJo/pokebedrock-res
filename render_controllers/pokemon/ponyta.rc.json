{
	"format_version": "1.8.0",
	"render_controllers": {
		"controller.render.pokemon:ponyta": {
			"arrays": {
				"materials": {
					"Array.materialVariants": [
						"Material.default"
					]
				},
				"geometries": {
					"Array.geometryVariants": [
						"Geometry.default"
					]
				},
				"textures": {
					"Array.textureVariants": [
						"Texture.default",
						"Texture.shiny_default"
					]
				}
			},
			"materials": [
				{
					"*": "Material.default"
				}
			],
			"geometry": "Geometry.default",
			"textures": [
				"Array.textureVariants[(v.skin_index==0 && query.property('pokeb:shiny') == false) ? 0:(v.skin_index==0 && query.property('pokeb:shiny') == true) ? 1:0]"
			],
			"uv_anim": {
				"offset": [
					0,
					"math.mod(math.floor(q.life_time * 8), 3) / 3"
				],
				"scale": [
					1,
					"1.0 / 3"
				]
			}
		}
	}
}
