{
	"format_version": "1.8.0",
	"render_controllers": {
		"controller.render.pokemon:torterra": {
			"arrays": {
				"materials": {
					"Array.materialVariants": [
						"Material.default",
						"Material.stpatrick"
					]
				},
				"geometries": {
					"Array.geometryVariants": [
						"Geometry.default",
						"Geometry.stpatrick"
					]
				},
				"textures": {
					"Array.textureVariants": [
						"Texture.default",
						"Texture.shiny_default",
						"Texture.stpatrick",
						"Texture.shiny_stpatrick"
					]
				}
			},
			"materials": [
				{
					"*": "Array.materialVariants[v.skin_index]"
				}
			],
			"geometry": "Array.geometryVariants[v.skin_index]",
			"textures": [
				"Array.textureVariants[(v.skin_index==0 && query.property('pokeb:shiny') == false) ? 0:(v.skin_index==0 && query.property('pokeb:shiny') == true) ? 1:(v.skin_index==1 && query.property('pokeb:shiny') == false) ? 2:(v.skin_index==1 && query.property('pokeb:shiny') == true) ? 3:0]"
			],
			"uv_anim": {
				"offset": [
					0,
					"(v.skin_index==1) ? math.mod(math.floor(q.life_time * 8), 3) / 3 : 0.0"
				],
				"scale": [
					1,
					"(v.skin_index==1) ? 1.0 / 3 : 1.0"
				]
			}
		},
		"controller.render.pokemon:torterra.evolve": {
			"arrays": {
				"geometries": {
					"Array.geometryVariants": [
						"Geometry.default",
						"Geometry.stpatrick"
					]
				}
			},
			"geometry": "Array.geometryVariants[v.skin_index]",
			"materials": [
				{
					"*": "Material.aura"
				}
			],
			"textures": [
				"Texture.evo_aura"
			],
			"uv_anim": {
				"offset": [
					"(query.variant == 1)?(Math.floor(query.life_time*20.0)+query.frame_alpha)*0.01:0.0",
					"(query.variant == 1)?(Math.floor(query.life_time*20.0)+query.frame_alpha)*0.01:0.0"
				],
				"scale": [
					1,
					1
				]
			},
			"light_color_multiplier": 1,
			"ignore_lighting": true
		}
	}
}
